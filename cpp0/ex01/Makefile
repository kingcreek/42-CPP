# SIMPLE ===================================================================================
NAME = myphonebook
# ==========================================================================================

# SRCS =====================================================================================
SRCS_DIR = sources/
SRCS =	Phonebook.cpp \
		Contact.cpp
# ==========================================================================================

# INCLUDES =================================================================================
INCS_DIR = includes/Contact.hpp
# ==========================================================================================

# DEPEDENCIES ==============================================================================
DEPS = $(INCS_DIR)/
# ==========================================================================================

# FLAGS ====================================================================================
INCLUDE = -I$(INCS_DIR)
FLAGS = -Wall -Wextra -Werror $(INCLUDE)
# ==========================================================================================

# OBJS =====================================================================================
OBJS_DIR 	= 	objects/
OBJ 		= 	$(SRCS:.cpp=.o)
OBJS 		= 	$(addprefix $(OBJS_DIR), $(OBJ))
# ==========================================================================================

# FROM SUBJECT =============================================================================
$(OBJS_DIR)%.o :	$(SRCS_DIR)%.cpp $(INCS_DIR)
	@mkdir -p $(OBJS_DIR)
	@mkdir -p $(OBJS_DIR)/contacts
	@echo "Compiling: $<"
	@clang++ $(FLAGS) -c $< -o $@

$(NAME): $(OBJS)
	@clang++ -g -fsanitize=address $(FLAGS) -o $(NAME) $(OBJS)

all: $(NAME)

clean:
	@echo "Cleaning: $(OBJS_DIR)"
	@rm -rf $(OBJS_DIR)

fclean: clean
	@echo "Cleaning: $(NAME)"
	@rm -f $(NAME)

re: fclean all
# ==========================================================================================

# SUP ======================================================================================
check: $(NAME)
	./$(NAME)
# ==========================================================================================